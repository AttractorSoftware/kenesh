{% extends 'AdminBundle::admin-base.html.twig' %}

{% block container -%}
    <h1>Deputy list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fullname</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_deputy_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.fullName }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_deputy_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_deputy_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_deputy_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
